<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/apolo"
    tools:context=".Michi_Apolo">

    <EditText
        android:id="@+id/editTextNumberSigned"
        android:layout_width="250dp"
        android:layout_height="69dp"
        android:backgroundTint="#EBF3F4"
        android:ems="10"
        android:inputType="numberSigned"
        android:textColor="#E8CFCF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/btn_cacular_apolo"
        android:layout_width="181dp"
        android:layout_height="97dp"
        android:shadowColor="#E6A7A7"
        android:text="Button"
        android:textColor="#EFE7E7"
        android:textColorHighlight="#672828"
        android:textColorHint="#301515"
        android:textColorLink="#602727"
        android:textSize="24sp"
        app:rippleColor="#201616"
        app:strokeColor="#7E2626"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="514dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="354dp" />
</androidx.constraintlayout.widget.ConstraintLayout>